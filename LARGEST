largest no
ORG OOOH
MOV R5,30H
MOV RO,#40H
MOV A,@RO
DEC R5
L3:INC RO
MOV 50H,@RO
CJNE A,50H,L1
SJMP L2
L1:JNC L2
MOV A,@RO
L2:DJNZ R5,L3
MOV 50H,A
END
/////////////////////////
OGR000H
MOV R4,#04H
AGAIN:MOV R3,#04H
MOV R0,#30H
LOOP1:MOV A,@R0
MOV B,A
INC R0
MOV A,@R0
CJNE A,B,CONTINUE
CONTINUE:JNC SKIP
MOV @R0,B
DEC R0
MOV @R0,A
INC R0
SKIP:DJNZ R3,LOOP1
         DJNZ R4,AGAIN
STOP:SJMP STOP




